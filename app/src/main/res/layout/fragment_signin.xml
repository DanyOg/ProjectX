<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/user_mail"
            style="@android:style/Widget.DeviceDefault.EditText"
            android:textColorLink="?attr/actionModeSplitBackground"
            android:background="@drawable/textedit_shape"
            android:maxLines="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/user2"
            android:drawablePadding="20dp"
            android:paddingLeft="15dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:hint="E-mail" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/user_password"
            style="@android:style/Widget.DeviceDefault.EditText"
            android:textColorLink="?attr/actionModeSplitBackground"
            android:background="@drawable/textedit_shape"
            android:maxLines="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/pass"
            android:drawablePadding="10dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:inputType="textPassword"
            android:hint="Password" />

        <Button
            android:text="@string/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_SignIn"
            android:background="@drawable/button_shape"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:onClick="Auth"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:text="Forget Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textColor="?android:attr/textColorSecondaryInverseNoDisable"
            android:textColorLink="?attr/colorButtonNormal"
            android:textIsSelectable="false"
            android:textColorHint="@android:color/darker_gray" />

    </LinearLayout>

</FrameLayout>
